@model IEnumerable<Henson_Student.Models.Student>

@{
    ViewBag.Title = "Index";
}
    <link rel="stylesheet" href="StyleSheet1.css">
<h2>All Student Info</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th style="background-color: @Html.DisplayNameFor(model => model.FavoriteColor)">
            @Html.DisplayNameFor(model => model.FavoriteColor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.StudentID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td style="background-color: @Html.DisplayNameFor(model => model.FavoriteColor)">
        @Html.DisplayFor(modelItem => item.FavoriteColor)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }) |
        @Html.ActionLink("Details", "Details", new { id = item.StudentID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.StudentID })
    </td>
</tr>
}

</table>
