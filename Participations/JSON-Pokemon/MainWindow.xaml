        <Button x:Name="btnMoreInfo" Content="Get More Info!" HorizontalAlignment="Left" Margin="138,345,0,0" VerticalAlignment="Top" Width="128" Height="52" Click="btnMoreInfo_Click"/>
        <ListBox HorizontalAlignment="Left" Height="178" Margin="648,122,0,0" VerticalAlignment="Top" Width="131"/>

    </Grid>
</Window>
